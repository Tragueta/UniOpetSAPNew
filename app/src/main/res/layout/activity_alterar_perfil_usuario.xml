<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AlterarPerfilUsuario">

    <TextView
        android:id="@+id/labelNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nomeAlterado"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:text="Nome:"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp" />

    <TextView
        android:id="@+id/labelSobrenome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sobrenomeAterado"
        android:layout_alignStart="@+id/labelNome"
        android:text="Sobrenome:"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/labelNome" />

    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/emailAlterado"
        android:layout_alignStart="@+id/labelNome"
        android:text="Email:"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/labelNome" />

    <EditText
        android:id="@+id/nomeAlterado"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="198dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/sobrenomeAterado"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nomeAlterado"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/emailAlterado"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/nomeAlterado"
        android:layout_marginBottom="184dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btnVoltarPerfilUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="Voltar"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnSalvarDados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:text="Salvar Alterações" />

    <ImageView
        android:id="@+id/imgPerfilAlterarDados"
        android:layout_width="143dp"
        android:layout_height="124dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:onClick="alterarImagemPerfil"
        android:id="@+id/txtAlterarImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="148dp"
        android:text="Alterar imagem de perfil" />

    <TextView
        android:id="@+id/txtAlterarSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="146dp"
        android:text="Deseja alterar a sua senha?" />


</RelativeLayout>