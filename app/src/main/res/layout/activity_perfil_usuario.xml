<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PerfilUsuario">

    <TextView
        android:id="@+id/labelNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txtNome"
        android:layout_marginStart="17dp"
        android:text="Nome:"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp" />

    <TextView
        android:id="@+id/labelSobrenome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/labelNome"
        android:layout_alignTop="@+id/txtSobrenome"
        android:text="Sobrenome:"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/labelNome" />

    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/labelNome"
        android:layout_alignTop="@+id/txtEmail"
        android:text="Email:"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/labelNome" />

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnAlterarDados"
        android:layout_marginTop="211dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/btnAlterarDados" />

    <TextView
        android:id="@+id/txtSobrenome"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtNome"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnVoltarHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Voltar"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnAlterarDados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="94dp"
        android:text="Alterar dados do perfil" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtNome"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="143dp"
        android:layout_height="124dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square" />

</RelativeLayout>